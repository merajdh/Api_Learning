<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="?attr/colorPrimary"
    android:layout_height="wrap_content">

    <TextView
        android:text="Status"
        android:letterSpacing="0.04"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_open"
                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Website"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:clickable="true"
                android:id="@+id/txt_web"
                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt_open"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/txt_open"
                android:focusable="true" />

            <TextView
                android:id="@+id/textView21"
                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Twitter"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_open"
                app:layout_constraintTop_toBottomOf="@+id/txt_open" />


            <TextView
                android:clickable="true"
                android:id="@+id/txt_Twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp"
                style="@style/CoinBitText.Body1"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/textView21"
                android:focusable="true" />


            <TextView
                android:id="@+id/textView24"
                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="reddit"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />


            <TextView
                android:clickable="true"
                style="@style/CoinBitText.Body1"
                android:id="@+id/txt_reddit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/textView24"
                android:focusable="true" />


            <TextView
                android:id="@+id/textView27"

                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Github"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.27" />

            <TextView
                android:clickable="true"
                android:id="@+id/txt_Github"
                style="@style/CoinBitText.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView27"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/textView27"
                android:focusable="true" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/txt_desc"
                style="@style/CoinBitText.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:layout_marginStart="20dp"

                android:maxLines="6"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="Some More Data"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>